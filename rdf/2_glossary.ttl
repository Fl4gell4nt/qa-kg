#################################################################
# SKOS Concepts Go Below
#################################################################

:SoftwareTest a skos:Concept ;
    skos:prefLabel "Software Test"@en ;
    skos:definition "A procedure carried out to evaluate a software system or component." .

# Categories of Tests
:FunctionalTest a skos:Concept ;
    skos:prefLabel "Functional Test"@en ;
    skos:broader :SoftwareTest ;
    skos:definition "Tests that verify specific functions of the software, typically based on requirements." .

:NonFunctionalTest a skos:Concept ;
    skos:prefLabel "Non-Functional Test"@en ;
    skos:broader :SoftwareTest ;
    skos:definition "Tests that verify non-functional aspects such as performance, usability, and reliability." .

# Functional Test Types
:UnitTest a skos:Concept ;
    skos:prefLabel "Unit Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests that focus on individual components or functions in isolation." .

:IntegrationTest a skos:Concept ;
    skos:prefLabel "Integration Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests that verify interactions between integrated components or systems." .

:SystemTest a skos:Concept ;
    skos:prefLabel "System Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests that validate the complete and integrated software system against the requirements." .

:AcceptanceTest a skos:Concept ;
    skos:prefLabel "Acceptance Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests conducted to determine if the system meets acceptance criteria and is ready for delivery." .

:RegressionTest a skos:Concept ;
    skos:prefLabel "Regression Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests that ensure new code changes do not adversely affect existing functionality." .

:SmokeTest a skos:Concept ;
    skos:prefLabel "Smoke Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Preliminary tests to check basic functionality after a build or deployment." .

:SanityTest a skos:Concept ;
    skos:prefLabel "Sanity Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Subset of regression tests focusing on specific functionality after changes or fixes." .

:EndToEndTest a skos:Concept ;
    skos:prefLabel "End-to-End Test"@en ;
    skos:broader :FunctionalTest ;
    skos:definition "Tests that simulate real user scenarios from start to finish to validate system flow." .

# Non-Functional Test Types
:PerformanceTest a skos:Concept ;
    skos:prefLabel "Performance Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests that measure how the system performs under certain conditions (load, stress, etc.)." .

:LoadTest a skos:Concept ;
    skos:prefLabel "Load Test"@en ;
    skos:broader :PerformanceTest ;
    skos:definition "Tests the system’s performance under expected user load." .

:StressTest a skos:Concept ;
    skos:prefLabel "Stress Test"@en ;
    skos:broader :PerformanceTest ;
    skos:definition "Tests the system’s robustness under extreme or unexpected load." .

:SpikeTest a skos:Concept ;
    skos:prefLabel "Spike Test"@en ;
    skos:broader :PerformanceTest ;
    skos:definition "Tests the system’s behavior under sudden and extreme increases in load." .

:ScalabilityTest a skos:Concept ;
    skos:prefLabel "Scalability Test"@en ;
    skos:broader :PerformanceTest ;
    skos:definition "Tests the system’s ability to scale up or down to meet user demands." .

:SecurityTest a skos:Concept ;
    skos:prefLabel "Security Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests that identify vulnerabilities and security flaws in the system." .

:UsabilityTest a skos:Concept ;
    skos:prefLabel "Usability Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests that assess the software’s user interface and user experience." .

:CompatibilityTest a skos:Concept ;
    skos:prefLabel "Compatibility Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests the software’s behavior across different browsers, OSs, devices, and networks." .

:ReliabilityTest a skos:Concept ;
    skos:prefLabel "Reliability Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests the system’s stability and error-free operation over time." .

:MaintainabilityTest a skos:Concept ;
    skos:prefLabel "Maintainability Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Evaluates how easily the software can be modified, updated, or extended." .

:RecoveryTest a skos:Concept ;
    skos:prefLabel "Recovery Test"@en ;
    skos:broader :NonFunctionalTest ;
    skos:definition "Tests the system’s ability to recover from crashes, hardware failures, or other major problems." .

# Exploratory and Other Test Types
:ExploratoryTest a skos:Concept ;
    skos:prefLabel "Exploratory Test"@en ;
    skos:broader :SoftwareTest ;
    skos:definition "Simultaneous learning, test design, and execution by testers exploring the system." .

:AdHocTest a skos:Concept ;
    skos:prefLabel "Ad Hoc Test"@en ;
    skos:broader :SoftwareTest ;
    skos:definition "Informal testing without planning or documentation to find defects quickly." .

:AlphaTest a skos:Concept ;
    skos:prefLabel "Alpha Test"@en ;
    skos:broader :AcceptanceTest ;
    skos:definition "In-house acceptance testing by internal teams before releasing the product to external users." .

:BetaTest a skos:Concept ;
    skos:prefLabel "Beta Test"@en ;
    skos:broader :AcceptanceTest ;
    skos:definition "External user testing to validate the software in a real environment before full release." .