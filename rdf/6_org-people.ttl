@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <https://w3id.org/schweidler/semantics/qa-kg#> .

<https://w3id.org/schweidler/semantics/qa-kg/org-people>
    a owl:Ontology ;
    dc:title "People & Organizational Structure Ontology" ;
    dc:creator "Rene Schweidler MSc." ;
    dc:description "Ontology describing people, roles, departments, reporting lines and responsibilities." ;
    rdfs:label "People & Organizational Structure Ontology Module for RSPKMS" ;
    owl:versionInfo "0.1" ;
    owl:imports
        <http://xmlns.com/foaf/0.1/> ,
        <http://www.w3.org/ns/org#> ,
        <http://www.w3.org/2006/vcard/ns#> ,
        <http://www.w3.org/ns/org#> ,
        <http://www.w3.org/ns/prov#> ,
        <http://www.w3.org/2006/time#> ,
        <http://www.w3.org/2001/XMLSchema#> ,
        <http://www.w3.org/2002/07/owl#> ,
        <http://www.w3.org/1999/02/22-rdf-syntax-ns#> ,
        <http://www.w3.org/2000/01/rdf-schema#> .

#################################################################
# Classes
#################################################################

:Person a owl:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Person" ;
    rdfs:comment "A person in a personal or professional context." .

:Interaction a owl:Class ;
    rdfs:label "Interaction" ;
    rdfs:comment "An interaction or communication between one or more people." .

:Organization a owl:Class ;
    rdfs:subClassOf org:Organization ;
    rdfs:label "Organization" .

:Affiliation a owl:Class ;
    rdfs:label "Affiliation" ;
    rdfs:comment "A person's role or membership in an organization." .

:Relationship a owl:Class ;
    rdfs:label "Relationship" ;
    rdfs:comment "A personal or professional relationship between people." .

:CommunicationChannel a owl:Class ;
    rdfs:label "Communication Channel" ;
    rdfs:comment "Medium of communication (e.g. email, phone, Slack)." .

:Event a owl:Class ;
    rdfs:label "Event" ;
    rdfs:comment "A time-bounded occurrence involving one or more people." .

:Note a owl:Class ;
    rdfs:label "Note" ;
    rdfs:comment "A note taken about a person or interaction." .

:Document a owl:Class ;
    rdfs:label "Document" ;
    rdfs:comment "A shared document or file associated with an interaction." .

:ContactMethod a owl:Class ;
    rdfs:label "Contact Method" ;
    rdfs:comment "A means of contacting a person (email, phone, etc.)." .

#################################################################
# Object Properties
#################################################################

:interactedWith a owl:ObjectProperty ;
    rdfs:domain :Interaction ;
    rdfs:range :Person .

:participant a owl:ObjectProperty ;
    rdfs:domain :Event ;
    rdfs:range :Person .

:hasAffiliation a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Affiliation .

:memberOf a owl:ObjectProperty ;
    rdfs:domain :Affiliation ;
    rdfs:range :Organization .

:hasRole a owl:ObjectProperty ;
    rdfs:domain :Affiliation ;
    rdfs:range rdfs:Literal .

:relatedTo a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person .

:usesChannel a owl:ObjectProperty ;
    rdfs:domain :Interaction ;
    rdfs:range :CommunicationChannel .

:hasDocument a owl:ObjectProperty ;
    rdfs:domain :Interaction ;
    rdfs:range :Document .

:hasNote a owl:ObjectProperty ;
    rdfs:domain :Interaction ;
    rdfs:range :Note .

:documentedBy a owl:ObjectProperty ;
    rdfs:domain :Interaction ;
    rdfs:range prov:Entity .

#################################################################
# Datatype Properties
#################################################################

:interactionDate a owl:DatatypeProperty ;
    rdfs:domain :Interaction ;
    rdfs:range xsd:dateTime .

:noteText a owl:DatatypeProperty ;
    rdfs:domain :Note ;
    rdfs:range xsd:string .

:documentTitle a owl:DatatypeProperty ;
    rdfs:domain :Document ;
    rdfs:range xsd:string .

:contactValue a owl:DatatypeProperty ;
    rdfs:domain :ContactMethod ;
    rdfs:range xsd:string .

:channelType a owl:DatatypeProperty ;
    rdfs:domain :CommunicationChannel ;
    rdfs:range xsd:string .
